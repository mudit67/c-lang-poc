  "version": "2.0.0",
  "tasks": [
    {
      "label": "RUN C file",
      "type": "shell",
      "command": "gcc -o ${workspaceFolder}/executables/${fileBasenameNoExtension} ${file} && ${workspaceFolder}/executables/${fileBasenameNoExtension}",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "close": false
      }
    }
  ]
}
